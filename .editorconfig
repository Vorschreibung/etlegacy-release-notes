[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

trim_trailing_whitespace = true
indent_style = space

# serialization & markup

[*.j2]
indent_size = 2
trim_trailing_whitespace = false

[*.{json,jsonl,json5}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = false

[*.xml]
indent_size = 2

[*.md]
indent_style = tab
trim_trailing_whitespace = false
